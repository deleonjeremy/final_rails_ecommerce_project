<p class="title is-4">
  <ul>
    <li>
      <strong>
        <%= album.name %>
      </strong>
    </li>

    <li>
      Artist: <%= link_to album.artist.name, show_artist_path(album.artist.id) %>
    </li>
    <li>
      Genre: <%= album.genre %>
    </li>
    <li>
      Price: <%= number_to_currency album.price / 10.0 %>
    </li>
    <li>
      Description: <%= album.description %>
    </li>
  </ul>
</p>